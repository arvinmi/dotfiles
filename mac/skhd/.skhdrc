# Mac system settings keyboard shortcuts
# cmd + shift - a : open mission control
# alt + shift - e : open desktop

alt - b: open -a "google chrome"
alt - m: open -a "messages"
alt - g: open -a "ghostty"
alt - v: open -a "visual studio code"
alt - c: open -a "cursor"
alt - d: open -a "discord"
alt - s: open -a "spotify"
alt - p: open -a "chatgpt"
alt - f: open -a "finder"

# L_ctrl + u/o to pageup/pagedown
# R_cmd + u/o to pageup/pagedown
lctrl - u: skhd -k "pageup"
rcmd - u: skhd -k "pageup"
lctrl - o: skhd -k "pagedown"
rcmd - o: skhd -k "pagedown"

# L_ctrl + h/j/k/l to arrows
# R_cmd + h/j/k/l to arrows
lctrl - h: skhd -k "left"
rcmd - h: skhd -k "left"
lctrl - j: skhd -k "down"
rcmd - j: skhd -k "down"
lctrl - k: skhd -k "up"
rcmd - k: skhd -k "up"
lctrl - l: skhd -k "right"
rcmd - l: skhd -k "right"
